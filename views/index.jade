    .full-width.gray-back
      .container
        .row.members
          h2.container メンバー
          each m in members
            .member.container.col-md-6.col-sm-13
              .row
                img.member-icon.col-xs-6(src='#{m.avater}')
                ol.profile.col-xs-6
                  ul: h4= m.name
                  ul= m.belonging
                  ul= m.title
                  ul= m.twitter
