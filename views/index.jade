doctype html
html(lang="ja")
  head
    title HoloMagicians | HoloLens Creator Group Japan
    link(rel='stylesheet', href='//maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css')
    link(rel='stylesheet', href='/css/bootstrap.min.css')
    link(rel='stylesheet', href='/css/fonts.css')
    link(rel='stylesheet', href='/css/magic.css')
  body
    .full-width.polygon-back
      .container
        .row.header
          .logo.vcenter: img.img-responsive.center-block(src='/img/logo.png')
    .full-width.gray-back
      .container
        .row.meetups
          h2.container 勉強会情報
          each m in meetups
            .container.meetup
              img.col-md-3.col-xs-12(src='/', style='background: #808080', height='120')
              .container.col-md-9
                h3= m.title
                p= m.date
                p #{m.attendees}人
    .full-width.white-back
      .container
        .row.introduction
          h2.container この勉強会について
          .container.introduction
