//- mixin declarations
mixin member_info(m)
  .member.container.col-md-6.col-sm-13
    .row
      img.member-icon.col-xs-4(src='#{m.avater}')
      ol.profile.col-xs-8
        ul: h4= m.name
        if m.belonging
          ul= m.belonging
        if m.title
          ul= m.title
        if m.mvp
          ul= m.mvp
        if m.twitter
          ul: a(href='https://twitter.com/#{m.twitter}') @!{m.twitter}
        if m.facebook
          ul: a(href='https://facebook.com/#{m.facebook}') !{m.facebook}
//- jade body
doctype html
html(lang="ja")
  head
    title HoloMagicians | HoloLens Creator Group Japan
    link(rel='stylesheet', href='//maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css')
    link(rel='stylesheet', href='/css/fonts.css')
    link(rel='stylesheet', href='/css/magic.css')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/react/15.0.2/react.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/react/15.0.2/react-dom.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/babel-core/5.8.23/browser.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.0/jquery.min.js')
  body
    .full-width.polygon-back
      .container
        .row.header
          .logo.vcenter: img.img-responsive.center-block(src='/img/logo.png')
    .full-width.gray-back
      .container
        .row.meetups
          h2.container 勉強会情報
          #meetups_container
    .full-width.white-back
      .container
        .row.introduction
          h2.container この勉強会について
          .container.introduction
             p HoloMagiciansはHoloLensに関心のあるデベロッパー、デザイナー、クリエイター集団です。
             p 各地で勉強会を行い、開発セッションやTouch & Try、アイデアソンやハッカソンを行っていきます。ぜひご参加ください。
    .full-width.gray-back
      .container
        .row.members
          h2.container メンバー
          - var i = 0
          while i < members.length
            .row.container
              + member_info(members[i++])
              if i < members.length
                + member_info(members[i++])
    .full-width.copyright-back
      .container.text-center
        p.vcenter copyright &copy; 2016 HoloMagicians
    script(src='/babel/meetups.js', type='text/babel')
